<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="."
    android:gravity="center"
    android:background="#f1f1f1"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_title"
        android:id="@+id/linearTitle">
        <TextView
            style="@style/tv"
            android:text="Trang Chính"
            android:id="@+id/tvTitle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_main"
        android:orientation="vertical"
        android:layout_below="@+id/linearTitle"
        android:layout_above="@+id/option">

    </LinearLayout>
    <LinearLayout
        style="@style/linear"
        android:background="@drawable/shadow_navi"
        android:layout_alignParentBottom="true"
        android:id="@+id/option">

        <Button
            style="@style/btn"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/ic_baseline_home_24"
            android:text="Trang Chính"
            android:id="@+id/btnHome"/>

        <Button
            style="@style/btn"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/ic_baseline_local_parking_24"
            android:text="Sản phẩm"
            android:id="@+id/btnProduct"/>

        <Button
            style="@style/btn"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/customer"
            android:text="Khách hàng"
            android:id="@+id/btnCustomer"/>

        <Button
            style="@style/btn"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/bill"
            android:text="Hóa đơn"
            android:id="@+id/btnBill"/>
    </LinearLayout>
</RelativeLayout>