<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Interface.itemBill.ActivityListBill"
    android:background="#f1f1f1">
    <TextView
        style="@style/tv"
        android:text="Danh Sách Sản Phẩm"
        android:id="@+id/tvTitle"
        android:background="@drawable/shadow_title"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearSearch"
        android:orientation="horizontal"
        android:layout_below="@+id/tvTitle"
        android:gravity="center"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_icon_search"
            android:src="@drawable/ic_baseline_search_24"
            android:id="@+id/imgSearch"
            android:padding="10dp"
            />
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/txtSearch"
            android:hint="Tìm kiếm"
            android:background="@drawable/shape_text_search"
            android:textSize="25dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearSearch"
        android:text="3 Sản phẩm"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:id="@+id/tvNumberSP"
        android:layout_marginTop="60dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvNumberSP"
        android:padding="20dp"
        android:background="@drawable/linear_product"
        android:layout_margin="10dp">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lvListSP">

        </ListView>
    </RelativeLayout>

</RelativeLayout>