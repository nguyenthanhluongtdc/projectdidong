<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Interface.itemBill.ActivityAddBill"
    android:background="#f1f1f1"
    android:layout_margin="12dp">
    <TextView
        style="@style/tv"
        android:text="Chi Tiết Hóa Đơn"
        android:id="@+id/tvTitlel"
        android:background="@drawable/shadow_title"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitlel"
        android:background="@drawable/shape_btn_addhoadon"
        android:textSize="20dp"
        android:text="Delete"
        android:textColor="#FFFFFF"
        android:id="@+id/btnDeleteHD"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDeleteHD"
        android:text="HD01"
        android:background="@drawable/linear_product"
        android:id="@+id/tvCodeHD"
        android:padding="8dp"
        android:textSize="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã khách hàng"
        android:id="@+id/tvKH"
        android:layout_below="@+id/tvCodeHD"
        android:textColor="@android:color/black"
        android:gravity="right"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvKH"
        android:textSize="25dp"
        android:id="@+id/spMaKH"
        android:background="@drawable/linear_product"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        >
    </Spinner>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date time"
        android:id="@+id/tvDate"
        android:layout_below="@+id/spMaKH"
        android:textColor="@android:color/black"
        android:gravity="right"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeDate"
        android:layout_below="@+id/tvDate"
        android:background="@drawable/linear_product"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn date"
            android:padding="15dp"
            android:textSize="20dp"
            android:id="@+id/tvDateNgayLapUpdate"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/date"
            android:id="@+id/btnDateNgayLap"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:layout_toRightOf="@+id/tvDateNgayLapUpdate"
            android:layout_alignParentRight="true"
            android:paddingRight="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_below="@+id/relativeDate"
        android:orientation="vertical"
        android:background="@drawable/linear_product"
        android:layout_marginTop="15dp"
        android:padding="20dp"
        android:id="@+id/relativeProduct"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sản phẩm"
            android:textSize="20dp"
            android:id="@+id/titleProduct"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spTenSanPham"
            android:layout_below="@+id/titleProduct"
            android:textSize="25dp"
            >
        </Spinner>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đơn giá"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_below="@+id/spTenSanPham"
            android:id="@+id/titleDonGia"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_below="@+id/spTenSanPham"
            android:id="@+id/resultDonGia"
            android:layout_toLeftOf="@+id/titleDonGia"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_below="@+id/titleDonGia"
            android:id="@+id/titleSoLuong"
            android:layout_alignParentRight="true"/>

        <com.travijuu.numberpicker.library.NumberPicker
            android:layout_width="130dp"
            android:layout_height="40dp"
            app:min="1"
            android:id="@+id/resultSoLuong"
            android:layout_below="@+id/titleDonGia"
            android:layout_marginTop="14dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thành tiền"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_below="@+id/titleSoLuong"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_below="@+id/titleSoLuong"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:id="@+id/resultThanhTien"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeProduct"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: "
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:id="@+id/total"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTotalMoney"
            android:text="3444"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/total"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:id="@+id/btnAddProduct"
            android:layout_alignParentRight="true"
            android:text="Thêm"
            android:background="@drawable/shape_btn_addhoadon"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_above="@+id/btnUpdateHD"
        android:background="@drawable/linear_product"
        android:layout_marginBottom="10dp">

        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gvProduct"
            android:numColumns="4"/>

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_btn_addhoadon"
        android:textSize="20dp"
        android:text="Update"
        android:textColor="#FFFFFF"
        android:id="@+id/btnUpdateHD"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>