<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Interface.itemProduct.ActivityAddProduct"
    android:background="#f1f1f1">

    <TextView
        style="@style/tv"
        android:text="Thêm Khách Hàng"
        android:id="@+id/tvTitlel"
        android:background="@drawable/shadow_title"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitlel"
        android:orientation="vertical"
        android:layout_marginTop="100dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_add_product"
            android:id="@+id/txtMaKH"
            android:hint="Mã khách hàng"
            android:textSize="20dp"
            android:padding="15dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTenKH"
            android:hint="Tên khách hàng"
            android:textSize="20dp"
            android:padding="15dp"
            android:background="@drawable/shape_add_product"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDiaChi"
            android:background="@drawable/shape_add_product"
            android:padding="15dp"
            android:textSize="20dp"
            android:hint="Địa chỉ"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại"
            android:id="@+id/txtSDT"
            android:padding="15dp"
            android:textSize="20dp"
            android:background="@drawable/shape_add_product"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_btn_addhoadon"
        android:text="Thêm Khách Hàng"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:layout_marginBottom="100dp"
        android:id="@+id/btnAddCustomer"/>

</RelativeLayout>